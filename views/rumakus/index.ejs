<% layout('layouts/boilerplate')%>

<h1>All rumakus</h1>
<div>
    <a href="/rumakus/new">Add rumaku</a>
</div>
<% for (let rumaku of rumakus){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=rumaku.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= rumaku.title %> </h5>
                <p class="card-text"><%= rumaku.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= rumaku.location%></small>
                </p>
                <a class="btn btn-primary" href="/rumakus/<%=rumaku._id%>">View <%=rumaku.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>