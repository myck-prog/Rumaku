<% layout('layouts/boilerplate.ejs')%>
<div class="row">
  <h1 class="text-center">New rumaku</h1>
  <div class="col-6 offset-3">
      <form action="/rumakus" method="POST" novalidate class="validated-form">
          <div class="mb-3">
              <label class="form-label" for="title">Title</label>
              <input class="form-control" type="text" id="title" name="rumaku[title]" required>
              <div class="valid-feedback">
                  Looks good!
              </div>
          </div>
          <div class="mb-3">
              <label class="form-label" for="location">Location</label>
              <input class="form-control" type="text" id="location" name="rumaku[location]" required>
              <div class="valid-feedback">
                  Looks good!
              </div>
          </div>
          <div class="mb-3">
              <label class="form-label" for="image">Image Url</label>
              <input class="form-control" type="text" id="image" name="rumaku[image]" required>
              <div class="valid-feedback">
                  Looks good!
              </div>
          </div>
          <div class="mb-3">
              <label class="form-label" for="price">Rumaku Price</label>
              <div class="input-group">
                  <span class="input-group-text" id="price-label">$</span>
                  <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                      aria-describedby="price-label" name="rumaku[price]" required>
              </div>
              <div class="valid-feedback">
                  Looks good!
              </div>
          </div>

          <div class="mb-3">
              <label class="form-label" for="description">Description</label>
              <textarea class="form-control" type="text" id="description" name="rumaku[description]"
                  required></textarea>
              <div class="valid-feedback">
                  Looks good!
              </div>
          </div>
          <div class="mb-3">
              <button class="btn btn-success">Add rumaku</button>
          </div>
      </form>
      <a href="/rumakus">All rumakus</a>
  </div>
</div>